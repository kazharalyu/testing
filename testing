#bin/bash

cowsay -f dragon ... | lolcat

echo "Made With Indonesia ";

echo -n "NAMA : ";

read nama

echo "==========================================";

echo " 1) Telur Ayam Asin Rp3.500";

echo " 2) Kacang Goreng 1.500";

echo " 3) Keluar";

echo "==========================================";

echo -n " Masukkan Pilihan Anda $nama [1-3] : ";

read pil

echo "==========================================";

if [ $pil -eq 1 ];

then

        echo " Anda Memilih Telur Ayam Asin";

        echo -n " Mau Beli Berapa? $nama";

        read porsi

        let hitung=porsi*3500;

        echo " Total Anda $nama = Rp. $hitung";

        echo " Silahkan Anda $nama Bayar di kasir";

        echo " Terima kasih Kepada $nama";


elif [ $pil -eq 2 ];

then

        echo " Anda Memilih Kacang Goreng ";

        echo -n " Mau Beli Berapa?  $nama : ";

        read porsi

        let hitung=porsi*1500;

        echo " Total Anda $nama = Rp. $hitung";

        echo " Silahkan Anda $nama Bayar di kasir";
        echo " Terima kasih Kepada $nama";

elif [ $pil -eq 3 ];

then

        exit

else


echo "Pilihan Tidak Ada";

        exit 1;


fi
